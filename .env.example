# Bookverse Backend - Environment Variables
# Copy to .env and fill in your values. NEVER COMMIT .env!

# ==============================================================================
# AI/LLM PROVIDERS (Multi-Provider Free Tier Strategy)
# ==============================================================================
# Get free keys from each provider. Only configure the ones you have.
# The system rotates through available providers automatically.

# Primary Providers (High Limits)
GROQ_API_KEY=           # https://console.groq.com - 100+ RPM
MISTRAL_API_KEY=        # https://console.mistral.ai - 1B tokens/month
OPENROUTER_API_KEY=     # https://openrouter.ai - Multiple free models

# Secondary Providers (Good Fallbacks)
HUGGINGFACE_API_KEY=    # https://huggingface.co/settings/tokens - 300/hour
FIREWORKS_API_KEY=      # https://fireworks.ai
COHERE_API_KEY=         # https://dashboard.cohere.com - 1000/month

# Backup Provider (Limited)
GEMINI_API_KEY=         # https://aistudio.google.com - 15 RPM

# Master switch (default: true)
AI_ENABLED=true

# ==============================================================================
# STRIPE (Payment Processing)
# ==============================================================================
STRIPE_API_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ==============================================================================
# DATABASE (if not using default Supabase)
# ==============================================================================
# SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/bookverse
# SPRING_DATASOURCE_USERNAME=postgres
# SPRING_DATASOURCE_PASSWORD=your_password

# ==============================================================================
# JWT & SECURITY
# ==============================================================================
# JWT_SIGNER_KEY=your_jwt_secret_key
# JWT_VALID_DURATION=86400
